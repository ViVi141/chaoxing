{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: 命令行版",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "args": ["-c", "config.ini"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "python": "${workspaceFolder}/.venv/Scripts/python.exe"
    },
    {
      "name": "Python: Web后端",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/web/backend/run_app.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "python": "${workspaceFolder}/.venv/Scripts/python.exe",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Celery Worker",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/web/backend/run_celery.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "python": "${workspaceFolder}/.venv/Scripts/python.exe",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}

